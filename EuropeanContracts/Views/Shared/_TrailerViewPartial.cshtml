@model TrailerViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.TrailerImageURL" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Make</h4>
            <h6>Trailer registration number: <b>@Model.RegistrationNumber</b></h6>
            <h6>Trailer model: <b>@Model.Make</b></h6>
            <h6>Has temperature control: <b>@(Model.HasTemperatureControl ? "Yes" : "No")</b></h6>
            <br />
            <a asp-area="" asp-controller="Trailer" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-area ="" asp-controller="Trailer" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>