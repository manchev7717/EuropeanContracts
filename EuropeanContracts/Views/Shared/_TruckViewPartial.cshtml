@model TruckViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.TruckImageURL" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.Make</h4>
            <h6>Truck registration number: <b>@Model.RegistrationNumber</b></h6>
            <h6>Truck model: <b>@Model.Model</b></h6>
            <h6>Horse power: <b>@Model.HorsePower</b> </h6>
            <h6>Has cargo space: <b>@(Model.HasCargoSpace == true ? "Yes":"No" )</b> </h6>
            <h6>Has temperature control: <b>@(Model.HasTemperatureControl ? "Yes" : "No")</b></h6>
            <br />
            <a asp-area="" asp-controller="Truck" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-area="" asp-controller="Truck" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>