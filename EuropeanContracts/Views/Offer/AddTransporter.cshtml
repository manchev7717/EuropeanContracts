@model AddTransportCompanyInOfferViewModel
@{
    ViewBag.Title = "Add transporter in offer";
}

<h2 class="text-center">@ViewBag.Title
</h2>
<hr class="border border-primary border-2 opacity-100" />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="TruckId"></label>
                <select asp-for="TruckId" class="form-control" >
                    <option value=""></option>
                    @foreach (var item in Model.Trucks)
                    {
                        <option value="@item.Id">@item.RegistrationNumber</option>
                    }
                </select>
                <span asp-validation-for="TruckId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailerId"></label>
                <select asp-for="TrailerId" class="form-control">
                        <option value=""></option>
                    @foreach (var item in Model.Trailers)
                    {
                        <option value="@item.Id">@item.RegistrationNumber</option>
                    }
                </select>
                <span asp-validation-for="TrailerId" class="small text-danger"></span> 
            </div>
                <div class="text-center">
                    <input class="btn btn-primary mt-3" type="submit" value="Save" />
                </div>
        </form>
    </div>
</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial">
}
