@model EditAndDeleteTrailerViewModel
@{
    ViewBag.Title = "Delete trailer";
}

<h2 class="text-center text-danger ">Are you sure you want to delete?</h2>
<hr class="border border-primary border-2 opacity-75" />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-6">
            <img class="card-img-top" src="@Model.TrailerImageURL" alt="Product Image">
        </div>
        <div class="col-md-4">
            <h4>@Model.Make</h4>
            <h5>Has temperature control: <b class="fs-4" .fs-4 text>@(Model.HasTemperatureControl ? "Yes" : "No")</b></h5>
            <hr/>
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>