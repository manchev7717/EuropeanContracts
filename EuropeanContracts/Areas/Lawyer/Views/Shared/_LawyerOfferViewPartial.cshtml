@model OfferDetailViewModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ProductImageURL" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.ProductName</h4>
            <h6>From Country: <b>@Model.LoadingCountry</b></h6>
            <h6>With Address: <b>@Model.LoadingAddress</b></h6>
            <h6> Price: <b>@String.Format("{0:f2}", Model.ProductPrice) EUR</b> </h6>
            <h6>(for @Model.ActionType)</h6>
            <h6>Transport: <b>@(Model.IsTemperatureControlNeeded ? "Temperature control is required" : "No temperature control required")</b></h6>
            <h6>Published by: <b>@Model.CreatorName</b></h6>
            <h6>With phone number: <b>@Model.CreatorPhoneNumber</b></h6>
            <h6>Published on: <b>@Model.PublicationDay</b></h6>
            <br />
            <a asp-area="Lawyer" asp-controller="LawyerHome" asp-action="DetailsForOffer" asp-route-id="@Model.Id"
               class="btn btn-success">See more Details</a>
        </div>
    </div>
</div>